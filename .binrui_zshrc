# alias npm proxies
alias cnpm="npm --registry=https://registry.npm.taobao.org \
--cache=$HOME/.npm/.cache/cnpm \
--disturl=https://npm.taobao.org/dist \
--userconfig=$HOME/.cnpmrc"

# alias editors
alias sb="open -a Sublime\ Text"
alias server="python -m SimpleHTTPServer"
alias code="open -a Visual\ Studio\ Code"

# alias auto fix git typo (i have really high speed typing)
alias gti='git'
alias gi='git'
alias gt='git'
alias itg='git'

# alias gitmoji
alias gitm='gitmoji'

# alias npm
alias nb='npm run build'
alias ns='npm run start'
alias nt='npm run test'
alias nd='npm run dev'
alias nr='npm run release'
alias np='npm publish'

# http behind charles
alias chls='export http_proxy=http://127.0.0.1:8888 https_proxy=http://127.0.0.1:8888'
alias dischls='unset http_proxy https_proxy'

# http behind lanter
alias lat='export http_proxy=http://127.0.0.1:50928 https_proxy=http://127.0.0.1:50928'
alias dislat='unset http_proxy https_proxy'

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# nvm stuff
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# utilities
mkcd() { mkdir -p -- "$1" && cd -- "$1" }
rustr() { rustc "./$1.rs" && "./$1" && rm "./$1" }


